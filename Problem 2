// Problem 2.cpp : Bu dosya 'main' işlevi içeriyor. Program yürütme orada başlayıp biter.
//

#include <iostream>

int main()
{
    int array[999];
    int sum = 2;
    array[0] = 1;
    array[1] = 2;
    for (int i = 2; i < 100; i++) {
        array[i] = array[i - 1] + array[i - 2];
        
        if (array[i] % 2 == 0 && array[i] < 4000000) {
            sum += array[i];
           
        }
        else if (array[i] >= 4000000) {
            std::cout << "4 milyon gecildi.\n" << i<< std::endl;
            break;
        }
    }
  
    std::cout << sum <<"\n";
}
